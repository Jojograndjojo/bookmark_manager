<!DOCTYPE html>
<html>
  <head>
    <title>Bookmark Manager</title>
  </head>

  <body>
    <%= partial :flash %>
    <% if current_user %>
      Welcome, <%= current_user.email %>
      <form action='/users/sign_out' method= 'post'>
        <input type='hidden' name='_method' value='delete'>
      <input type='submit' value='Sign out'>
      </form>
    <% end %>
    <%= yield %>
  </body>
</html>
